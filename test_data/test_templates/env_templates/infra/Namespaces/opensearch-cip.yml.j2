---
name: "{{ current_env.environmentName }}-opensearch-cip"
credentialsId: ""
labels:
- "solutionInstance-{{ current_env.environmentName }}"
- "solution-{{ current_env.tenant }}"
isServerSideMerge: false
cleanInstallApprovalRequired: true
mergeDeployParametersAndE2EParameters: false
deployParameters: 
  opensearch:
    client:
      ingress:
        hosts: 
          - "opensearch-{{ current_env.environmentName }}-cip.apps.{{ current_env.cluster.cloud_public_url }}"
    securityConfig:
      authc:
        basic:
          password: "${creds.get(\"opensearch-cip-basic-cred\").password}"
          username: "${creds.get(\"opensearch-cip-basic-cred\").username}"
  dbaasAdapter:
    dbaasAdapterAddress: "http://dbaas-opensearch-adapter.{{ current_env.environmentName }}-opensearch-cip:8080"
    dbaasAggregatorPhysicalDatabaseIdentifier: "opensearch.{{ current_env.environmentName }}-opensearch-cip"
    elasticsearchHost: "elasticsearch-cip.{{ current_env.environmentName }}"
    elasticsearchUsername: "${creds.get(\"opensearch-cip-admin-cred\").username}"
    elasticsearchPassword: "${creds.get(\"opensearch-cip-admin-cred\").password}"   
e2eParameters: {}
technicalConfigurationParameters: {}
deployParameterSets:
  - opensearch
e2eParameterSets: []
technicalConfigurationParameterSets: []

